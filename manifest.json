{
  "manifest_version": 2,
  "name": "Push to Telegram",
  "version": "1.0.0",
  "description": "Push any web content directly to telegram desktop!",
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" },
  "browser_action": {
    "default_icon": "icon128.png",
    "default_title": "Push to Telegram"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
   "permissions": [
       "contextMenus"
   ]
}
